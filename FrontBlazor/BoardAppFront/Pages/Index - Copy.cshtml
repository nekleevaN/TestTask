@page "/UpdateAnnouncement"
@model BoardAppFront.Pages.EditAnnouncementModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Редагувати оголошення</h1>

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>Назва</th>
                <th>Опис</th>
                <th>Категорія та підкатегорія</th>
                <th>Статус</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <input type="text" id="title" class="form-control" asp-for="UpdateAnnouncementRequest.Title" required />
                </td>

                <td>
                    <textarea id="description" class="form-control" asp-for="UpdateAnnouncementRequest.Description" required>
                        @Model.UpdateAnnouncementRequest.Description
                    </textarea>
                </td>

                <td>
                    <select id="category" class="form-select" asp-for="SelectedCategory" required>
                        <option value="">Виберіть категорію</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Key" style="font-weight:bold;">
                                @category.Key
                            </option>

                            @foreach (var subCategory in category.Value)
                            {
                                <option value="@subCategory">
                                    &nbsp;&nbsp;&nbsp;@subCategory
                                </option>
                            }
                        }
                    </select>
                </td>

                <td>
                    <div class="form-check">
                        <input type="checkbox" id="status" class="form-check-input" asp-for="UpdateAnnouncementRequest.Status" />
                        <label class="form-check-label" for="status">Активний</label>
                    </div>
                </td>

                <td>
                    <button type="submit" class="btn btn-primary">Зберегти</button>
                    <a href="/" class="btn btn-secondary">Скасувати</a>
                </td>
                <input type="hidden" asp-for="UpdateAnnouncementRequest.Id" />

            </tr>
        </tbody>
    </table>
</form>
